        <td><%= task.email_reminder %></td>
-->


        <td>
          <a href="/tasks/<%= task.id %>" class="btn btn-primary btn-sm">Show</a>
          <a href="/tasks/<%= task.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <a href="/delete_task/<%= task.id %>" class="btn btn-danger btn-sm" rel="nofollow">Delete</a>
